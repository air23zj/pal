# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Clarity
PROJECT_DESCRIPTION="A modern AI-powered personal assistant"
VERSION=1.0.0
SHOW_API_DOCS=true

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=sqlite:///./clarity.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO=false
DB_SSL_MODE=prefer
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=
DB_CONNECT_RETRIES=3
DB_CONNECT_RETRY_DELAY=5
DB_STATEMENT_TIMEOUT=30
DB_MIGRATION_ENABLED=true
DB_MIGRATION_DIR=migrations

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TIMEOUT=5
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_KEEPALIVE=true
REDIS_RETRY_ON_TIMEOUT=true
REDIS_RETRY_MAX_ATTEMPTS=3
REDIS_RETRY_DELAY=1
REDIS_HEALTH_CHECK_INTERVAL=30

# Cache Settings
CACHE_ENABLED=true
CACHE_PREFIX=cache
CACHE_VERSION=v1
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=clarity
CACHE_SERIALIZER=json
CACHE_KEY_FUNCTION=default
CACHE_NULL_VALUES=false
CACHE_COMPRESSION_ENABLED=false
CACHE_COMPRESSION_THRESHOLD=1000

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2
S3_BUCKET=clarity-files

# External APIs
OPENAI_API_KEY=
GEMINI_API_KEY=
SERPER_SEARCH_API_KEY=
GROQ_API_KEY=
NEWS_API_KEY=
SERPAPI_API_KEY=
OPENWEATHER_API_KEY=
YOUTUBE_API_KEY=

# API Rate Limits
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200
RATE_LIMIT_EXPIRY=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/clarity.log
LOG_ROTATION=500 MB
LOG_RETENTION=10 days

# WebSocket
WS_MESSAGE_QUEUE_SIZE=100
WS_HEARTBEAT_INTERVAL=30
WS_CLOSE_TIMEOUT=10

# Health Check
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_TIMEOUT=5 